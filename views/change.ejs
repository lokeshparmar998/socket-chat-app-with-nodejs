<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Change Password</title>
    <link rel="stylesheet" href="/assets/css/change.css">
  </head>
  <body>
    <%include partials/header.ejs %>
    <h1>Change Password</h1>

      <form method="post", action="/user/change">
        <input type="text" name="email" placeholder="Email" id="cp">
        <input type="password" name="current_password" placeholder="Current Password" id="cp">
        <input type="password" name="new_password" placeholder="New Password" id="np">
        <input type="password" name="confirm_password" placeholder="Confirm Password" id="cop">
        <input type="submit" name="submit" value="submit">
      </form>


    <%include partials/footer.ejs %>
  </body>
</html>
